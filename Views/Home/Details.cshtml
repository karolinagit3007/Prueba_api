@model EjemploMVC_MAT.Models.CardModel

@{
    ViewData["Title"] = "Detalles de la Carta";
}

<div class="container py-5">
    <h2 class="text-center text-dark font-weight-bold mb-5">@Model.Name</h2>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg rounded-5 border-0 overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-5 d-flex justify-content-center align-items-center p-4 bg-light">
                        @if (Model.CardImages != null && Model.CardImages.Any() && !string.IsNullOrWhiteSpace(Model.CardImages.First().ImageUrl))
                        {
                            <img src="@Model.CardImages.First().ImageUrl" class="img-fluid rounded-3" alt="@Model.Name" style="max-height: 450px; object-fit: cover; border-radius: 1.2rem;">
                        }
                        else
                        {
                            <div class="bg-secondary d-flex align-items-center justify-content-center" style="max-height: 450px; width: 100%; border-radius: 1.2rem;">
                                <p class="text-muted">No hay imagen disponible</p>
                            </div>
                        }
                    </div>

                    <div class="col-md-7 p-4">
                        <div class="card-body">
                            <h5 class="card-title text-primary font-weight-bold mb-3">@Model.Name</h5>
                            <hr class="mb-4">
                            <div class="mb-3">
                                <p class="card-text"><strong>Tipo:</strong> @Model.Type</p>
                                <p class="card-text"><strong>Atributo:</strong> @Model.Attribute</p>
                                <p class="card-text"><strong>Raza:</strong> @Model.Race</p>
                                <p class="card-text"><strong>ATK:</strong> @Model.Atk | <strong>DEF:</strong> @Model.Def</p>
                                <p class="card-text mb-4"><strong>Descripción:</strong> @Model.Desc</p>
                            </div>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary w-100 py-3 mt-4 rounded-pill text-center font-weight-bold">Volver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
