@model List<EjemploMVC_MAT.Models.CardModel>

@{
    ViewData["Title"] = "Lista de Cartas";
}

<h2 class="text-center mb-4">Cartas de Blue-Eyes White Dragon</h2>

<div class="row">
    @foreach (var card in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                @if (card.CardImages != null && card.CardImages.Any() && !string.IsNullOrWhiteSpace(card.CardImages.First().ImageUrl))
                {
                    <img src="@card.CardImages.First().ImageUrl" class="card-img-top" alt="@card.Name" style="height: 300px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                        <p class="text-muted">No hay imagen disponible</p>
                    </div>
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@card.Name</h5>
                    <p class="card-text flex-grow-1">@card.Desc</p>
                    <a href="@Url.Action("Details", "Home", new { id = card.Id })" class="btn btn-primary mt-2">Ver Detalles</a>
                </div>
            </div>
        </div>
    }
</div>
